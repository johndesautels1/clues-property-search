# CLUES Property Dashboard Environment Variables
# Copy this to .env.local and fill in your values

# ============================================
# DATABASE (Required)
# ============================================
# For local: postgresql://user:password@localhost:5432/clues_property_db
# For Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
# For Neon: postgresql://[user]:[password]@[host]/[dbname]?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/clues_property_db"

# ============================================
# LLM API KEYS (At least one required)
# ============================================
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."
XAI_API_KEY="xai-..."  # GROK - Use XAI_API_KEY not GROK_API_KEY
GEMINI_API_KEY="..."
PERPLEXITY_API_KEY="pplx-..."
FBI_CRIME_API_KEY="..."  # Get from https://api.data.gov/signup/

# ============================================
# LLM CONFIGURATION
# ============================================
DEFAULT_LLM="auto"  # Options: auto, claude, gpt, grok, gemini, hybrid
ENABLE_CLAUDE="true"
ENABLE_GPT="true"
ENABLE_GROK="true"
ENABLE_GEMINI="true"

# ============================================
# RATE LIMITING
# ============================================
MAX_REQUESTS_PER_MINUTE="60"
BATCH_SIZE="5"
DELAY_BETWEEN_BATCHES_MS="1000"

# ============================================
# COST MANAGEMENT
# ============================================
WARN_COST_THRESHOLD="10.00"
MAX_DAILY_COST="100.00"

# ============================================
# CLUES QUANTUM INTEGRATION (Optional)
# ============================================
CLUES_APP_URL="http://localhost:3000"
CLUES_API_KEY=""
CLUES_SYNC_ENABLED="false"

# ============================================
# VERCEL (Auto-populated by Vercel)
# ============================================
# VERCEL_URL
# VERCEL_ENV

# ============================================
# BRIDGE INTERACTIVE API (MLS Data)
# ============================================
BRIDGE_CLIENT_ID="your-client-id-here"
BRIDGE_CLIENT_SECRET="your-client-secret-here"
BRIDGE_API_BASE_URL="https://api.bridgedataoutput.com/api/v2"
BRIDGE_DATA_SYSTEM="abor"  # Your MLS data system code (e.g., abor, har, mlspin)

# ============================================
# API ENDPOINT
# ============================================
# NOTE: The /api directory contains Vercel serverless functions.
# For Replit development, either:
# 1. Deploy /api to Vercel and set VITE_API_URL to that URL, or
# 2. Use relative path /api with a Vite proxy configuration
# The default Replit dev server runs on port 5000.
VITE_API_URL="/api"  # Relative path (requires backend) or external URL
